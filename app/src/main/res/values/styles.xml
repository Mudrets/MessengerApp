<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AddReactionButton">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:src">@drawable/ic_baseline_add_24</item>
        <item name="android:background">@drawable/bg_emoji_view</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="Message.EmojiReaction">
        <item name="size">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minHeight">@dimen/emoji_layout_height</item>
        <item name="android:background">@drawable/bg_emoji_view</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ButtonTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/button_background_color</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textSize">24sp</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="SearchIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:src">@drawable/ic_baseline_search_24</item>
    </style>

    <style name="AppBarTheme">
        <item name="colorPrimary">@color/search_channels_app_bar</item>
        <item name="colorPrimaryDark">@color/search_channels_app_bar</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:tint">@color/text_color</item>
    </style>

    <style name="Shimmer">
        <item name="android:background">@color/shimmer_color</item>
        <item name="android:backgroundTint">@color/shimmer_color</item>
    </style>

    <style name="Shimmer.Avatar">
        <item name="android:background">@drawable/bg_circle</item>
    </style>

    <style name="Shimmer.Avatar.ChatAvatar">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="Shimmer.Avatar.PeopleAvatar">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="Shimmer.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24sp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="Shimmer.Title.Email">
        <item name="android:layout_height">20sp</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="Shimmer.Title.Stream">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">14dp</item>
<!--        <item name="android:layout_height">36dp</item>-->
    </style>

    <style name="ErrorFragmentIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/ic_baseline_cloud_off_24</item>
        <item name="tint">@color/error_text_on_bg_color</item>
    </style>

    <style name="ErrorFragmentMessage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/error_text_on_bg_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ReloadButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="tint">@color/text_color</item>
        <item name="icon">@drawable/ic_reload_48</item>
    </style>

    <style name="MessageActionButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>