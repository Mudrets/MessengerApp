<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/userShimmerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/peopleShimmerImageView1"
                style="@style/Shimmer.Avatar.PeopleAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/peopleUserNameShimmer1"
                style="@style/Shimmer.Title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/peopleShimmerImageView1"
                app:layout_constraintTop_toTopOf="@id/peopleShimmerImageView1"/>

            <View
                android:id="@+id/peopleEmailShimmer1"
                style="@style/Shimmer.Title.Email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/peopleShimmerImageView1"
                app:layout_constraintBottom_toBottomOf="@id/peopleShimmerImageView1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>



</FrameLayout>